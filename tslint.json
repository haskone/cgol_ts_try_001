{
  "extends": ["tslint:latest", "tslint-react"],
  "rules": {
    "array-type": [true, "generic"],
    "jsx-boolean-value": "never",
    "whitespace": {
      "options": [
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type",
        "check-typecast",
        "check-module",
        "check-rest-spread",
        "check-preblock",
        "check-postbrace"
      ]
    }
  }
}